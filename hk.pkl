amends "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Config.pkl"

hooks {
    ["pre-commit"] {
        steps {
            ["gitleaks"] {
                check = "gitleaks protect --staged --verbose"
                exclusive = true
            }
            ["test-bootstrap"] {
                check = "mise run test-bootstrap"
                exclusive = true
                profiles = List("slow")
            }
        }
    }
}
