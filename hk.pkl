amends "package://github.com/jdx/hk/releases/download/v1.2.0/hk@1.2.0#/Config.pkl"

hooks {
    ["pre-commit"] {
        steps {
            ["gitleaks"] {
                check = "gitleaks protect --staged --verbose"
                exclusive = true
            }
            ["test-bootstrap"] {
                check = "command -v docker >/dev/null 2>&1 && mise run test-bootstrap || echo 'Skipping bootstrap test (Docker not available)'"
                exclusive = true
            }
        }
    }
}
